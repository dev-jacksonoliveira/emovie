<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button -->
    <style name="button_white">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="button_white_medium">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="button_white_sm">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="button_icon" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/icons</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="button_text" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/green_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="button_text_seguro_100" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/azul_100</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="button_error" parent="button_text">
        <item name="android:background">@drawable/button_text_outline</item>
    </style>
    <style name="button_blue">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/yellow_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="button_blue_medium">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/yellow_primary</item>
    </style>

</resources>