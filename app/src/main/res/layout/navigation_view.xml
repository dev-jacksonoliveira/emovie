<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_navigation"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    app:cardCornerRadius="@dimen/spacing_none"
    app:cardElevation="@dimen/spacing_nano"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nav_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/nav_back_button"
            android:layout_width="@dimen/spacing_large"
            android:layout_height="@dimen/spacing_large"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/icons"
            android:gravity="center|end"
            android:rotation="180"
            android:text="@string/icon_internBack"
            android:textColor="@color/black_100"
            android:textSize="@dimen/font_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nav_title"
            android:layout_width="@dimen/spacing_none"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roobert_bold"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/black_100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/nav_action_group"
            app:layout_constraintStart_toEndOf="@id/nav_back_button"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Navigation" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nav_action_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/spacing_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/nav_title"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/nav_first_button"
                android:layout_width="@dimen/spacing_large"
                android:layout_height="@dimen/spacing_large"
                android:gravity="center"
                android:textSize="@dimen/font_medium"
                android:visibility="gone"
                app:fontFamily="@font/icons"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/icon_share_doc" />

            <TextView
                android:id="@+id/nav_second_button"
                android:layout_width="@dimen/spacing_large"
                android:layout_height="@dimen/spacing_large"
                android:gravity="center"
                android:textSize="@dimen/font_medium"
                android:visibility="gone"
                app:fontFamily="@font/icons"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/nav_first_button"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/icon_share_doc" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>