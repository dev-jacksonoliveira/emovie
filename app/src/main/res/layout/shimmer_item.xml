<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <View
        android:id="@+id/little_item_view"
        android:layout_width="@dimen/spacing_medium"
        android:layout_height="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_xs"
        android:background="@drawable/shimmer_round_corner"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/big_item_view" />

    <View
        android:id="@+id/big_item_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_sm"
        android:layout_marginEnd="72dp"
        android:background="@drawable/shimmer_round_corner"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@id/medium_item_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/little_item_view"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/medium_item_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_smedium"
        android:layout_marginTop="@dimen/spacing_xs"
        android:layout_marginEnd="163dp"
        android:background="@drawable/shimmer_round_corner"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/big_item_view"
        app:layout_constraintTop_toBottomOf="@id/big_item_view" />

</androidx.constraintlayout.widget.ConstraintLayout>